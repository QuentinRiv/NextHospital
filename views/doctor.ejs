<!-- patient section start -->
<section class="consultation" id="consultation">
    <h1 class="heading">Consultations <span>précédentes</span></h1>

    <div class="box-container">
      <% for (var i = 0; i < consultations.length; i++) { %>
      <div class="box">
        <img src="/image/<%= consultations[i].doctorImg%>" alt="" />
        <h3><%= consultations[i].patient%></h3>
        <span><%= consultations[i].category%></span>
        <div class="share">
          <a href="#" class="fa-solid fa-calendar-days"></a>
          <a href="#" class="fa-solid fa-user-doctor"></a>
          <a href="#" class="fa-solid fa-phone"></a>
        </div>
      </div>
