<!-- rendezvous section start -->

<section class="rendezvous" id="rendezvous">
    <h1 class="heading"><span>Prenez</span> rendez-vous</h1>

    <div class="row" id="bookingForm">
      <div class="image">
        <img src="/image/rdvd.jpg" alt="" />
      </div>

      <form action="/appointment/login" method="POST" class="appmt-form">
        <h3>Book appointment</h3>
        <input
          type="text"
          placeholder="Votre nom"
          class="box"
          id="patientName"
          value="Liz Ray"
        />
        <input
          type="email"
          placeholder="Votre email"
          class="box"
          id="email"
          value="ray.liz@email.com"
        />
        <select class="box" name="doctorName" id="doctorName">
          <% for (var i = 0; i < patients.length; i++) { %>
          <option value="<%= patients[i].name%>"><%= patients[i].name%></option>
          <% } %>
        </select>

        <select class="box" name="about" id="about">
          <option value="Urgence">Urgence</option>
          <option value="suivi">Suivi</option>
          <option value="checkup">Checkup</option>
        </select>
        <input type="date" class="box" id="date" value="1995-05-17" />
        <input type="submit" value="Prendre rendez-vous" class="btn" />
      </form>
    </div>
  </section>

  <!-- rendezvous section end -->

